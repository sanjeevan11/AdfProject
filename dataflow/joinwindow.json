{
	"name": "joinwindow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"name": "EMPL"
				},
				{
					"name": "DEPT"
				}
			],
			"sinks": [
				{
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "join1"
				},
				{
					"name": "window1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          EmpNo as integer,",
				"          EmpName as string,",
				"          Sal as integer,",
				"          Deptno as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false) ~> EMPL",
				"source(output(",
				"          Deptno as integer,",
				"          Dname as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false) ~> DEPT",
				"EMPL, DEPT join(EMPL@Deptno == DEPT@Deptno,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 window(desc(EMPL@Deptno, true),",
				"     Sal = avg(Sal)) ~> window1",
				"window1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['window.txt'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}