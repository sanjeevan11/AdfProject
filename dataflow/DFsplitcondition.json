{
	"name": "DFsplitcondition",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"name": "EMPL"
				}
			],
			"sinks": [
				{
					"name": "splitcondition"
				}
			],
			"transformations": [
				{
					"name": "split1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          EmpNo as integer,",
				"          EmpName as string,",
				"          Sal as integer,",
				"          Deptno as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false) ~> EMPL",
				"EMPL split(Sal >= 12000,",
				"     Deptno == 20,",
				"     disjoint: false) ~> split1@(Salary, dept, default)",
				"split1@Salary sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['split.txt'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> splitcondition"
			]
		}
	}
}